{
  "name": "@crherman7/fetch-middleware",
  "version": "0.0.1",
  "description": "Fetch API Middleware",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crherman7/fetch-middleware.git"
  },
  "bugs": {
    "url": "https://github.com/crherman7/fetch-middleware/issues"
  },
  "homepage": "https://github.com/crherman7/fetch-middleware#readme",
  "author": "Chris Herman",
  "keywords": [
    "node",
    "fetch",
    "middleware"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsup src/index.ts --dts",
    "clean": "rimraf dist",
    "dev": "npm run build --watch",
    "example": "npx ts-node example",
    "prepare": "husky install",
    "test": "jest"
  },
  "lint-staged": {
    "**/*.{astro,cjs,js,jsx,mjs,ts,tsx,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "eslintConfig": {
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-var": "off",
      "no-undef": "off",
      "no-control-regex": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-control-regex": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-empty-interface": "off"
    },
    "ignorePatterns": [
      "**/dist/**"
    ],
    "parser": "@typescript-eslint/parser"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@tsconfig/node18": "^1.0.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^41.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "format-package": "^7.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
